<div class="container">
  <div class="row">
    <h2 class="px-4 my-4", style="background-color: #FFDBC9;">タグ一覧</h2>
  </div>
  <%= link_to '新規タグ作成', new_admin_tag_path, class: 'btn btn-primary' %>
  <div class="row">
    <table class="table my-5 table-hover">
      <thead style="background-color: #FFDBC9;">
        <tr>
          <th>ID</th>
          <th>タグ名</th>
          <th>作成日時</th>
          <th>更新日時</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.id %></td>
            <td><%= tag.name %></td>
            <td><%= tag.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= tag.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td>
              <%= link_to '編集', edit_admin_tag_path(tag), class: 'btn btn-info btn-sm' %>
              <%= link_to '削除', admin_tag_path(tag), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

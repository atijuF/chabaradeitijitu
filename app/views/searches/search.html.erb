<div class="container">
  <h2 class="mt-3 ml-3">検索結果</h2>

<% if @range == "User" %>
  <h2>ユーザー検索結果</h2>
  <% @users.each do |user| %>
    <div>
      <%= link_to image_tag(user.get_profile_image(100, 100)), user_path(user) %>
      <%= link_to user.name, user_path(user) %>
    </div>
  <% end %>
<% elsif @range == "Post" %>
  <h2>投稿検索結果</h2>
  <div>
    <%= render 'public/posts/list', posts: @posts %>
  </div>

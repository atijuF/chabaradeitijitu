<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="my-4">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: "form-control", autocomplete: "email", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :"パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :"パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      <h3 class="px-4 py-2 mb-4" style="background-color: #FFDBC9;">既に登録済みの方</h3>
      <p>
        <%= link_to "こちら", new_user_session_path %>からログインしてください。
      </p>
    </div>
  </div>
</div>
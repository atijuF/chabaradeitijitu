<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/users/sidebar', user: @user %>
      <%= render 'public/posts/sidebar', post: @new_post %>
    </div>
    
    <div class="col-md-9">
      <h2 class="ml-3 mt-3">投稿一覧</h2>
      <%= form_tag(posts_path, method: "get", class: "form-inline") do %>
        <%= select_tag :sort, options_for_select([['新しい順', 'newest'], ['古い順', 'oldest'], ['いいね順', 'most_liked']], params[:sort]), class: 'form-control mr-2' %>
        <%= submit_tag '変更', class: 'btn btn-primary' %>
      <% end %>
      <%= render 'public/posts/list', posts: @posts %>
    </div>
  </div>
</div>

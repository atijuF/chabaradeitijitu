<h2>New Post</h2>
<% if @post.errors.any? %>
  <%= @post.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @post, method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <br>
  <%= f.submit 'Create post' %>
  </br>
<% end %>
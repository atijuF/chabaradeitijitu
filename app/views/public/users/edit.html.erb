<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="px-4 my-4" style="background-color: #FFDBC9;">会員情報編集</h2>
    </div>
  </div>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= @user.errors.count %> errors prohibited this post from being saved:</strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="user_profile_image">ユーザーイメージ</label>
      <div class="col-sm-10">
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file", style: "appearance: none;" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="user_name">ユーザー名</label>
      <div class="col-sm-10">
        <%= f.text_field :name, autofocus: true, placeholder: " ", autocomplete: "name", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="user_email">メールアドレス</label>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row mt-3 pb-5">
      <div class="col-4"></div>
      <div class="col-4 text-center">
        <%= f.submit "変更内容を保存", class: "btn btn-success mr-2" %>
        <%= link_to "退会する", user_path(@user), method: :delete, data: { confirm: "本当に退会しますか？" }, class:"btn btn-danger ml-2" %>
      </div>
      <div class="col-4"></div>
    </div>
  <% end %>
</div>
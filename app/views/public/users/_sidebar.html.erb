<% if user %>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
    </tbody>
  </table>
  <% if user == current_user %>
    <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% else %>
    <% if user_signed_in? %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), class: 'btn btn-outline-secondary btn-block', method: :delete %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), class: 'btn btn-outline-secondary btn-block', method: :post %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag 'no_image.jpg', size: "100x100" %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th>ゲストユーザー</th>
      </tr>
    </tbody>
  </table>
<% end %>
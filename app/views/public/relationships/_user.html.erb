<% if @users.exists? %>
  <div class="container">
    <table class="table">
      <thead class="px-4 my-4", style="background-color: #FFDBC9;">
        <tr>
          <th>ユーザー名</th>
          <th>プロフィール画像</th>
          <th>フォロー数</th>
          <th>フォロワー数</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= image_tag(user.get_profile_image(100, 100), class: "rounded-circle mb-3") %></td>
            <td><%= user.followings.count %></td>
            <td><%= user.followers.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="container">
    <p>ユーザーはいません</p>
  </div>
<% end %>